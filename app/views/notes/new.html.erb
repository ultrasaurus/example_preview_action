<h1>New note</h1>

<% form_for(@note) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Preview', :onclick => "this.form.action='new_preview'"%>
    <%= f.submit 'Create' %>

  </p>
<% end %>

<%= link_to 'Back', notes_path %>